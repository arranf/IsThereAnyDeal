<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="party.hunchbacktank.lowscore">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- To cache -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="LowScore"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".LowScoreApplication">
        <activity
            android:name="party.hunchbacktank.lowscore.activities.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="authorise"
                    android:scheme="isthereanydeal" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name="party.hunchbacktank.lowscore.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="party.hunchbacktank.lowscore.activities.DisplayGameActivity"
            android:label="@string/title_activity_display_game"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
